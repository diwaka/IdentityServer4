@model IdentityServer.ViewModel.LoginViewmodel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Login</h1>

<h4>LoginViewmodel</h4>
<hr />
<div class="row">
    <h1>Sign In With</h1>
    <form asp-controller="Auth" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
        @foreach (var provider in Model.ExternalProviders)
        {

      
            <button name="provider" type="submit" value="@provider.Name">
                @provider.Name
            </button>
        }

    </form>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Auth" asp-action="Login" method="post">

            <input asp-for="ReturnUrl" type="hidden" class="form-control" />
            <div class="form-group">
                <label class="control-label">UserName</label>
                <input asp-for="@Model.UserName"  class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input asp-for="@Model.Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
